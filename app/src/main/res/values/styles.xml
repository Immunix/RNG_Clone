<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!--Surfaces such as ViewPager & TabLayout-->
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorAccent</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorWhite</item>

        <item name="scrimBackground">@color/mtrl_scrim_color</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--Bottom Nav Bar (Back, Home, Overview buttons)-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialNightTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryNightDark</item>
        <item name="colorOnPrimary">@color/colorBackgroundDark</item>

        <item name="colorSurface">@color/colorPrimaryNightDark</item>
        <item name="colorOnSurface">@color/colorPrimaryNightAccent</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorOnBackground">@color/colorPrimaryNight</item>

        <item name="android:statusBarColor">@color/colorPrimaryNightDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryNightDark</item>
    </style>

</resources>